<div class="container">
  <div class="row">
    <div class="col">
      <div class="col-12">
        <div class="d-flex show-content">
          <div class="d-flex justify-content-center img-show-div">
            <%= cl_image_tag @sneaker.photo, class: "img-show" %>
          </div>
          <div class="description-stockx text-center d-flex align-center">
            <h2><%= @sneaker.name%></h2>
            <p>Story :<%= @sneaker.description %></p>
            <p>Brand :<%= @sneaker.brand %></p>
            <p>Price : Â£ <%= @sneaker.price_per_sneaker %></p>
            <p>Size UK :<%= @sneaker.size %></p>
            <%= link_to "StockX", @sneaker.link, class:"btn-stockx" %>
          </div>
        </div>
        <div class="buttons-show d-flex justify-content-around">
          <%= link_to sneaker_path(@sneaker), method: :delete, data: { confirm: "Are you sure?" } do %>
            <div class= "btn btn-show-last">
              Delete SNK
            </div>
          <% end %>
          <%= link_to sneakers_path do%>
          <div class="btn btn-show-last">
            All SNK
          </div>
          <% end %>
          <%= link_to edit_sneaker_path do %>
            <div class= "btn btn-show-last">
              Edit SNK
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
