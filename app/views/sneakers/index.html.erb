<div class="container index">
  <div class="button-add text-center">
    <% if policy(Sneaker).create? %>
      <%= link_to new_sneaker_path do %>
        <i class="fas fa-plus-circle add"></i>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <div class="col">
          <div class="cards">
            <% @sneakers.each do |sneaker| %>
              <%= link_to sneaker_path(sneaker) do %>
                <div class=" img-cards" id="image-cards">
                  <%= cl_image_tag sneaker.photo, class: "animated fadeInUp slow img-show-sneaker" %>
                </div>
              <% end %>
            <% end %>
          </div>
    </div>
  </div>
</div>



